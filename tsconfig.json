{
    "compilerOptions": {
        "allowJs": false,
        "module": "none",
        "target": "es5",
        "noImplicitAny": true,
		"outDir": "dist",
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": false,
        "typeRoots": ["./node_modules/@types"]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
